@model Post

<header class="masthead" style="background-image: url('@Model.imagePath')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-heading">
                    <h1>@Model.title</h1>
                    <h2 class="subheading">@Model.Subtitle</h2>
                    <span class="meta">
                        Posted by
                        @(Model.user.Email)
                        on @Model.creationTime
                    </span>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container">
    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    @Html.Raw(Model.content)
                </div>
            </div>
        </div>
    </article>
</div>